<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    tools:context=".MainActivity" >
    
    <include layout="@layout/header" />
    
    <TextView
        android:id="@+id/TextView1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="10dp"
        android:layout_marginTop="50dp"
        android:text="@string/main_text"
        android:textStyle="bold" />

    <Button
        android:id="@+id/transport_button_departure"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/TextView1"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginTop="42dp"
        android:text="@string/home_button_transport" />

    <Button
        android:id="@+id/transport_button_arrival"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/transport_button_departure"
        android:layout_alignRight="@+id/transport_button_departure"
        android:layout_below="@+id/transport_button_departure"
        android:layout_marginTop="-9dp"
        android:text="@string/home_button_map" />

    <Button
        android:id="@+id/home_button_help"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/home_button_service"
        android:layout_alignRight="@+id/home_button_service"
        android:layout_below="@+id/home_button_service"
        android:layout_marginTop="-9dp"
        android:text="@string/home_button_help" />

    <Button
        android:id="@+id/home_button_service"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/home_button_marketplace"
        android:layout_alignRight="@+id/home_button_marketplace"
        android:layout_below="@+id/home_button_marketplace"
        android:layout_marginTop="-9dp"
        android:text="@string/home_button_support" />

    <Button
        android:id="@+id/home_button_marketplace"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/transport_button_arrival"
        android:layout_alignRight="@+id/transport_button_arrival"
        android:layout_below="@+id/transport_button_arrival"
        android:layout_marginTop="-9dp"
        android:text="@string/home_button_marktetplace" />
    
    <include layout="@layout/footer" />

</RelativeLayout>
