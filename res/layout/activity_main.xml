<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    tools:context=".MainActivity" >
    
    <include
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        layout="@layout/header" />
    
    <TextView
        android:id="@+id/TextView1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="10dp"
        android:layout_marginTop="50dp"
        android:text="@string/main_text"
        android:textStyle="bold" />
    
	<Button
	    android:id="@+id/home_button_transport"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_below="@+id/TextView1"
	    android:layout_centerHorizontal="true"
	    android:layout_marginLeft="40dp"
	    android:layout_marginStart="@dimen/activity_horizontal_margin"
	    android:layout_marginTop="29dp"
	    android:background="@drawable/smooth_top_edges"
	    android:drawableLeft="@drawable/car_icon_40x40"
	    android:drawablePadding="5dip"
	    android:drawableRight="@drawable/arrow_icon_20x20"
	    android:gravity="left|center_vertical|right"
	    android:onClick="startIntentByButton"
	    android:paddingLeft="15dp"
	    android:paddingRight="15dp"
	    android:tag="TransportActivity"
	    android:text="@string/home_button_transport" />

    <Button
        android:id="@+id/home_button_map"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/home_button_transport"
        android:layout_alignRight="@+id/home_button_transport"
        android:layout_below="@+id/home_button_transport"
        android:layout_marginTop="-2dp"
        android:background="@drawable/smooth_button"
        android:drawableLeft="@drawable/map_icon_40x40"
        android:drawableRight="@drawable/arrow_icon_20x20"
        android:drawablePadding="10dip"
        android:paddingRight="15dp"
   		android:paddingLeft="15dp"
        android:gravity="left|center_vertical|right" 
        android:text="@string/home_button_map"
		android:onClick="startIntentByButton"
		android:tag="MapActivity" />

    <Button
        android:id="@+id/home_button_marketplace"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/home_button_map"
        android:layout_alignRight="@+id/home_button_map"
        android:layout_below="@+id/home_button_map"
        android:layout_marginTop="-2dp"
        android:background="@drawable/smooth_button"
        android:drawableLeft="@drawable/marketplace_icon_40x40"
        android:drawableRight="@drawable/arrow_icon_20x20"
        android:drawablePadding="10dip"
        android:paddingRight="15dp"
   		android:paddingLeft="15dp"
        android:gravity="left|center_vertical|right" 
        android:text="@string/home_button_marktetplace"
		android:onClick="startIntentByButton"
		android:tag="MarketplaceActivity" />
    
    <Button
        android:id="@+id/home_button_service"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/home_button_marketplace"
        android:layout_alignRight="@+id/home_button_marketplace"
        android:layout_below="@+id/home_button_marketplace"
        android:layout_marginTop="-2dp"
        android:background="@drawable/smooth_button"
        android:drawableLeft="@drawable/service_desk_icon_40x40"
        android:drawableRight="@drawable/arrow_icon_20x20"
        android:drawablePadding="10dip"
        android:paddingRight="15dp"
   		android:paddingLeft="15dp"
        android:gravity="left|center_vertical|right" 
        android:text="@string/home_button_support"
		android:onClick="startIntentByButton"
		android:tag="" />

    <Button
        android:id="@+id/home_button_help"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/home_button_service"
        android:layout_alignRight="@+id/home_button_service"
        android:layout_below="@+id/home_button_service"
        android:layout_marginTop="-6dp"
        android:background="@drawable/smooth_bot_edges"
        android:drawableLeft="@drawable/help_icon_40x40"
        android:drawableRight="@drawable/arrow_icon_20x20"
        android:drawablePadding="10dip"
        android:paddingRight="15dp"
   		android:paddingLeft="15dp"
        android:gravity="left|center_vertical|right" 
        android:text="@string/home_button_help"
		android:onClick="startIntentByButton"
		android:tag="" />
    
    <include
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        layout="@layout/footer" />

 

</RelativeLayout>
