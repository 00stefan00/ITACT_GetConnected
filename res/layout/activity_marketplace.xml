<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    tools:context=".MainActivity" >
    
    <include layout="@layout/header" />
    
    <TextView
        android:id="@+id/TextView1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="10dp"
        android:layout_marginTop="50dp"
        android:text="@string/main_text"
        android:textStyle="bold" />
    
    <include layout="@layout/footer" />

    <Button
        android:id="@+id/create_ride_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/request_ride_btn"
        android:layout_centerHorizontal="true"
        android:text="@string/create_ride" />

    <Button
        android:id="@+id/display_requests_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/create_ride_btn"
        android:layout_centerHorizontal="true"
        android:text="@string/display_requests" />

    <Button
        android:id="@+id/request_ride_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/create_ride_btn"
        android:layout_below="@+id/TextView1"
        android:layout_marginTop="20dp"
        android:text="@string/request_ride" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/display_requests_btn"
        android:layout_marginTop="16dp"
        android:gravity="left|right"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/offered_ride_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/offered_ride_string"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/offered_ride_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ride_description" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" 
            android:orientation="horizontal" >

            <Button
                android:id="@+id/button1"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_gravity="right"
                android:text="@string/read_more_btn" />

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
