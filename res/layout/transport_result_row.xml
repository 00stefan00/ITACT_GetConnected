<?xml version="1.0" encoding="utf-8"?>
<TableRow xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/transport_result_row"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >
   
   <LinearLayout
       android:layout_width="fill_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical" >
		
		<LinearLayout
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:orientation="horizontal" >

			<TextView
			    android:id="@+id/transport_result_text_departure"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:drawableRight="@drawable/toarrow"
			    android:text="12:10" />

			<TextView
			    android:id="@+id/transport_result_text_arival"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:text="13:00" />
	       
        </LinearLayout> 

 	  <LinearLayout
 	      android:layout_width="fill_parent"
 	      android:layout_height="wrap_content"
 	      android:orientation="horizontal" >
	   
 	        <TextView
                    android:id="@+id/transportation_result_transfers_header"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/transportation_result_transfers_header"
                    android:textAppearance="?android:attr/textAppearanceMedium" />
 	        
 	      <TextView
	        android:id="@+id/transport_result_text_transfers"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentRight="true"
	        android:layout_alignParentTop="true"
	        android:layout_marginRight="39dp"
	        android:text="0" />

	   
    	</LinearLayout> 
    	
 	  <LinearLayout
 	      android:layout_width="fill_parent"
 	      android:layout_height="wrap_content"
 	      android:orientation="horizontal" >
	   
 	     <TextView
                    android:id="@+id/transportation_result_duration_header"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/transportation_result_duration_header"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

	    <TextView
	        android:id="@+id/transport_result_text_duration"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentLeft="true"
	        android:layout_alignParentTop="true"
	        android:layout_below="@+id/transport_result_text_transfers"
	        android:text="duration"/>

    	</LinearLayout> 
    </LinearLayout>

</TableRow>