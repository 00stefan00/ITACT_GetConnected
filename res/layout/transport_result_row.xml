<?xml version="1.0" encoding="utf-8"?>
<TableRow xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/transport_result_row"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp" >
   
   <LinearLayout
       android:layout_width="fill_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical" >
		
		<LinearLayout
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:orientation="horizontal" 
		    android:gravity="center_vertical|center_horizontal"
		    android:weightSum="1">

			<TextView
			    android:id="@+id/transport_result_text_departure"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_weight="0.4"
			    android:gravity="left"/>
			
			   <ImageView
			       android:id="@+id/arrow2"
			       android:contentDescription="@string/arrowdes"
			       android:layout_width="wrap_content"
			       android:layout_height="wrap_content"
			       android:layout_marginLeft="3dp"
			       android:layout_marginRight="10dp"
			       android:layout_weight="0.06"
			       android:adjustViewBounds="true"
			       android:maxHeight="40dp"
			       android:maxWidth="40dp"
			       android:scaleType="fitCenter"
			       android:src="@drawable/toarrow" />

			<TextView
			    android:id="@+id/transport_result_text_arival"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_weight="0.4"
			    android:gravity="right"/>
	       
        </LinearLayout> 

 	  <LinearLayout
 	      android:layout_width="fill_parent"
 	      android:layout_height="wrap_content"
 	      android:layout_marginLeft="10dp"
 	      android:orientation="horizontal" >
	   
 	        <TextView
                    android:id="@+id/transportation_result_transfers_header"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/transportation_result_transfers_header"
                    android:textAppearance="?android:attr/textAppearanceMedium" />
 	        
 	      <TextView
 	          android:id="@+id/transport_result_text_transfers"
 	          android:layout_width="wrap_content"
 	          android:layout_height="wrap_content"
 	          android:layout_marginLeft="10dp"
 	          android:layout_marginRight="39dp" />	   
    	</LinearLayout> 
    	
 	  <LinearLayout
 	      android:layout_width="fill_parent"
 	      android:layout_height="wrap_content"
 	      android:layout_marginLeft="10dp"
 	      android:orientation="horizontal" >
	   
 	     <TextView
                    android:id="@+id/transportation_result_duration_header"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/transportation_result_duration_header"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

	    <TextView
	        android:id="@+id/transport_result_text_duration"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        
	        android:layout_marginLeft="10dp" />

    	</LinearLayout> 
    </LinearLayout>

</TableRow>