<resources xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
        <item name="android:actionBarStyle">@style/AppTheme.ActionBar</item>
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <item name="android:actionBarStyle">@style/AppTheme.ActionBar</item>
    </style>
    
    <style name="AppTheme.ActionBar" parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:background">#E0E0E0</item>
    </style>
    
    <style name="ButtonTheme">
        <item name="android:background">#0A6981</item>
        <item name="android:textSize">10sp</item>
        <item name="android:layout_height">2dp</item>
    </style>
    
    <style name="HeaderTheme">
        <item name="android:background">#2D4D58</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_width">fill_parent</item>
    </style>
    
    <style name="FooterTheme">
        <item name="android:background">#2D4D58</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_width">fill_parent</item>
    </style>

</resources>
