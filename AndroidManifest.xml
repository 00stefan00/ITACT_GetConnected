<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.getconnected"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="18" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/gc_icon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.getconnected.MainActivity"
            android:label="@string/app_name" 
            android:screenOrientation="portrait" 
            android:configChanges="orientation|keyboardHidden">            
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.getconnected.TransportActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" >            
        </activity>
        <activity
            android:name="com.example.getconnected.OfferRideActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" >            
        </activity>
        <activity
            android:name="com.example.getconnected.TransportResultActivity"
            android:label="@string/app_name" 
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name="com.example.getconnected.BaseActivity"
            android:label="@string/app_name" 
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name="com.example.getconnected.MarketplaceActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name="com.example.getconnected.MapActivity"
            android:label="@string/title_activity_map" 
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.example.getconnected.RequestedRidesActivity"
            android:label="@string/title_activity_map" 
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.example.getconnected.RequestRideActivity"
            android:label="@string/title_activity_map" 
            android:screenOrientation="portrait" >
        </activity>
    </application>

</manifest>
